  <script>
    // Chart.js example for crop yield
    const ctx = document.getElementById('cropChart').getContext('2d');
    const cropChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep'],
        datasets: [{
          label: 'Yield (kg)',
          data: [300, 500, 400, 600, 700, 800, 650, 720, 810],
          backgroundColor: '#2e8b57'
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

